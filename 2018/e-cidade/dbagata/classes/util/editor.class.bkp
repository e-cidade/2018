    /***********************************************************/
    /* Returns the current word
    /***********************************************************/
    function get_current_word($n = 0)
    {
        $this->curpos = GtkScintilla::get_current_pos();
        GtkScintilla::word_left_extend();
        if ($n ==1)
        GtkScintilla::word_left_extend();
        
        $word = GtkScintilla::get_sel_text();
        GtkScintilla::goto_pos($this->curpos);
        return trim($word);
    }

    /***********************************************************/
    /* Auto complete control
    /***********************************************************/
    function complete_word_activate($is_key=0)
    {
        $disable_autocomplete = FALSE;
        //$word = strtolower($this->get_current_word());
        $word = $this->get_current_word();
        
        if (@$this->lastword && $is_key)
        if (substr(trim($word),0,strlen($this->lastword)) == $this->lastword)
        $disable_autocomplete = TRUE;
        if (trim($word) == substr($word,1)) $word[0] = " ";
        if ((strlen($word) > 2) || $word == '(')
        switch ($word{0})
        {
            case "$":
            if ($is_key) $this->lastword = $word;
            if (preg_match_all("/\\".$word."[a-z0-9_>=-]*/",
            GtkScintilla::get_text(), $matches ))
            {
                if (!$matches[0]) return;
                $matches[0][0] = "";
                $linematches =$matches[0];
                if (!$linematches) return;
                $linematches=array_unique($linematches);
                if (!$linematches) return;
                asort($linematches);
                
                $l = trim(implode(" ",$linematches));
                if ($is_key && count($linematches) < 2) $l.="   ";
                if (!$is_key || (count($linematches) < 5))
                if (!$disable_autocomplete )
                {
                    GtkScintilla::autoc_show(strlen($word), $l);
                    if ($is_key) $this->lastword = $word;
                }
            }
            break;
            default:
            $word = trim($word);
            if ($linematches = $this->get_suggestions($word))
            {
                $l = trim(implode("",array_unique($linematches)));
                if ($is_key && count($linematches) == 1) $l.=" ";
                //if (!$is_key || (count($linematches) < 5))
                //if (!$disable_autocomplete )
                {
                    if ($is_key) $this->lastword = $word;
                    GtkScintilla::autoc_show(strlen($word), $l);
                    //return;
                }
            }
            elseif ($word == '(')
            {
                $this->lastword = substr($this->get_current_word(1), 0, -1);
                $start = $this->curpos - strlen($this->lastword);
                if ($f = $this->get_definition($this->lastword))
                {
                    GtkScintilla::call_tip_show($start,$f);
                }
            }
            break;
        }
    }

    /***********************************************************/
    /* Return the suggestions for autocomplete
    /***********************************************************/
    function get_suggestions ($word)
    {
        for($i=1;$i<=8;$i++)
        {
            if (!$this->keywords[$i]) continue;
            if (isset($matches)) unset($matches);
            if (@preg_match_all ("( ".$word ."[^ ]*)" , $this->keywords[$i],
            $matches, PREG_PATTERN_ORDER))
            return $matches[0];
        }
    }

    /***********************************************************/
    /* Read the support files
    /***********************************************************/
    function read_function_file()
    {
        $data = file('include/php_functions');
        for ($i=0;$i<count($data);$i++)
        {
            $line = $data[$i];
            $info  = explode(" ",trim($line));
            $this->functions[$info[1]] = trim($line);
        }
        
        $data = file('include/gtk_functions');
        for ($i=0;$i<count($data);$i++)
        {
            $line = $data[$i];
            $info  = explode(" ",trim($line));
            $function_name = $info[1];
            $this->functions[$function_name] = trim($line);
            $gtkfunctions[] = $function_name;
        }
        $this->keywords[7] = implode(' ', $gtkfunctions);
        
        $data = file('include/extra_functions');
        for ($i=0;$i<count($data);$i++)
        {
            $line = $data[$i];
            $info  = explode(" ",trim($line));
            $function_name = $info[1];
            $this->functions[$function_name] = trim($line);
            $extrafunctions[] = $function_name;
        }
        $this->keywords[8] = implode(' ', $extrafunctions);
    }

    /***********************************************************/
    /* Get definitions from a function
    /***********************************************************/
    function get_definition($function)
    {
        $a =  @$this->functions[$function];
        return $a;
    }

