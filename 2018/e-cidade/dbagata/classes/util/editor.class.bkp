        GtkScintilla::set_usize(400, 200);
        GtkScintilla::use_pop_up(0);
        
        GtkScintilla::set_sel_back(true,    11250603);
        GtkScintilla::marker_set_back(true, 15908608);
        
        GtkScintilla::set_caret_fore(0);
        GtkScintilla::set_caret_width(2);
        GtkScintilla::set_caret_period(250);
        
        $this->DefinePHP();
        
        GtkScintilla::set_tab_width(4);
        GtkScintilla::set_use_tabs(1);
