        GtkScintilla::show_lines(0,GtkScintilla::get_line_count());
        GtkScintilla::show();
    }

    /***********************************************************/
    /* Opens a file
    /***********************************************************/    
    function Open($file)
    {
        GtkScintilla::clear_all();
        if (file_exists($file))
        {
            $lines = file($file);
            $lines = array_reverse($lines);
            
            foreach($lines as $line)
            GtkScintilla::insert_text(-1, $line);
        }
        GtkScintilla::empty_undo_buffer();
    }

    /***********************************************************/
    /* Inserts a string
    /***********************************************************/
    function OpenString($string)
    {
        GtkScintilla::clear_all();
        GtkScintilla::insert_text(-1, $string);
        GtkScintilla::empty_undo_buffer();
    }

