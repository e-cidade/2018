    /**
     * Garante que a string estará em UTF8
     * @param $content string a ser convertida
     */
    public function assureUTF8($content)
    {
        if (utf8_encode(utf8_decode($content)) !== $content ) // se não UTF8
        {
            $content = utf8_encode($content);
        }
        return $content;
    }
